@model IEnumerable<Book>

<div>
    <div class="container d-flex p-2">
        <h1>Books</h1>
        <div style="text-align: right; flex-grow: 1;">
            <a asp-controller="Book" asp-action="Create" class="btn btn-secondary">Add Book</a>
        </div>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Author Name
                    </th>
                    <th>
                        Year Published
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var book in Model)
                {
                    <tr style="vertical-align: middle;">
                        <td style="width: 30%;">
                            @book.Title
                        </td>
                        <td style="width: 30%;">
                            @book.Author.FirstName @book.Author.LastName
                        </td>
                        <td style="width: 20%;">
                            @book.Year
                        </td>
                        <td style="width: 20%;" class="p-3">
                            <a asp-controller="Book" asp-action="Update" asp-route-Id="@book.Id" class="btn btn-success mx-2">Edit</a>
                            <a asp-controller="Book" asp-action="Delete" asp-route-Id="@book.Id" class="btn btn-danger mx-2">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h2 style="color: red; font-style: italic;">Books not found</h2>
    }
</div>
