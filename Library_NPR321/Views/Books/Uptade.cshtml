@model Book

<h1>Edit Book</h1>

<form method="post" asp-controller="Book" asp-action="Update">
    <div class="form-group" style="width: 40%">
        <label asp-for="Title" class="m-1">Title</label>
        <input asp-for="Title" class="form-control m-1" placeholder="Title">
    </div>
    <div class="form-group" style="width: 40%">
        <label class="m-1">Author Name</label>
        <input disabled class="form-control m-1" value="@Model.Author.FirstName @Model.Author.LastName" placeholder="Author Name">
    </div>
    <div class="form-group" style="width: 40%">
        <label asp-for="Year" class="m-1">Year Published</label>
        <input asp-for="Year" class="form-control m-1" placeholder="Year Published">
    </div>
    <button type="submit" class="btn btn-success m-2">Save</button>
    <a asp-controller="Book" asp-action="Index" class="btn btn-secondary m-2">Back</a>
</form>
