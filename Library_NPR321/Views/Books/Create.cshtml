@model Book

<h1>Add book</h1>

<form method="post" asp-controller="Books" asp-action="Create" enctype="application/x-www-form-urlencoded">
    <div class="form-group" style="width: 40%">
        <label asp-for="Title" class="m-1">Title</label>
        <input asp-for="Title" class="form-control m-1" placeholder="Назва">
    </div>
    <div class="form-group" style="width: 40%">
        <label asp-for="Genre" class="m-1">Genre</label>
        <input asp-for="Genre" class="form-control m-1" placeholder="Genre">
    </div>
    <div class="form-group" style="width: 40%">
        <label asp-for="Language" class="m-1">Language</label>
        <input asp-for="Language" class="form-control m-1" placeholder="Language">
    </div>
    <div class="form-group" style="width: 40%">
        <label asp-for="PageCount" class="m-1">Page Count</label>
        <input asp-for="PageCount "min="1" class="form-control m-1" placeholder="Page Count">
    </div>
    <div class="form-group" style="width: 40%">
        <label asp-for="Year" class="m-1">Year</label>
        <input asp-for="Year" min="1" class="form-control m-1" placeholder="Year">
    </div>
    <div class="form-group" style="width: 40%">
        <label asp-for="Publisher" class="m-1">Publisher</label>
        <input asp-for="Publisher" class="form-control m-1" placeholder="Publisher">
    </div>
    <div class="form-group" style="width: 40%">
        <label asp-for="Image" class="m-1">Image Path</label>
        <input asp-for="Image" class="form-control m-1" placeholder="Image Path">
    </div>
    <div class="form-group" style="width: 40%">
        <label asp-for="AuthorId" class="m-1">Author</label>
        <select asp-for="AuthorId" class="form-control m-1" asp-items="@(new SelectList(ViewBag.Authors, "Id", "FullName"))">
            <option value="">Select Author</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary m-2">Add</button>
    <a asp-controller="Books" asp-action="Index" class="btn btn-secondary m-2">Back</a>
</form>
