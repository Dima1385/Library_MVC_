@model Library_MVC_.Models.Book

<!DOCTYPE html>
<html>
<head>
    <title>Деталі книги</title>
</head>
<body>
    <h1>@Model.Title</h1>
    <p><strong>Автор:</strong> @Model.Author</p>
    <p><strong>Опис:</strong> @Model.Description</p>
    <p><strong>Дата видання:</strong> @Model.PublishDate.ToShortDateString()</p>
    <img src="@Model.ImageUrl" alt="Book Image" style="width: 200px; height: auto;" />
    <a href="@Url.Action("Index", "Books")">Назад до списку книг</a>
</body>
</html>
